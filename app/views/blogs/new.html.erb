<div class="introduction">
	<h1>Create Blog Plost</h1>
</div>

<div class="content" id="new-blog">
	<%= form_for @blog do |f| %>
	
		<div class="text-field">
			<%= f.label :title %>
			<%= f.text_field :title %>
		</div>
		
		<%= f.label :contents %>
		<%= f.text_area :contents %>
		
		<div class="text-field"
			<%= f.label :tags %>
			<%= f.text_field :tags %>
		</div>
		<div class="submit">
			<%= f.submit %>
		</div>
	<% end %>
</div>