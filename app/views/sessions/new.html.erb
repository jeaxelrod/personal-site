<div class="introduction">
	<h1>Sign in</h1>
<div class="content">
	<%= form_tag('/sessions', method: "post") do %>

		<%= label_tag(:username, "Username") %>
		<%= text_field_tag(:username) %>
		
		<%= label_tag(:password, "Password") %>
		<%= password_field_tag(:password) %>
		
		<%= submit_tag("Log in") %>
	<% end %>
</div>